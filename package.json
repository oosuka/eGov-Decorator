{
  "name": "egov-decorator",
  "version": "1.1.2",
  "private": true,
  "scripts": {
    "test": "node --test",
    "check": "node --check src/content.js && node --check src/background.js && node --check src/options.js",
    "lint": "eslint \".eslintrc.cjs\" \"src/**/*.js\" \"tests/**/*.js\"",
    "lint:fix": "eslint \".eslintrc.cjs\" \"src/**/*.js\" \"tests/**/*.js\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,json,md}": [
      "prettier --write"
    ],
    "src/**/*.js": [
      "eslint --fix"
    ],
    "tests/**/*.js": [
      "eslint --fix"
    ]
  }
}
